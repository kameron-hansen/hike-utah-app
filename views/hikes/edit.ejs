<% include ../partials/header %>

<div class="container">
    <div class="row">
        <h1>Edit <%= hike.name %>:</h1>
        
        <div>
            <form action="/hikes/<%= hike._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="hike[name]" value="<%= hike.name %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="hike[image]" value="<%= hike.image %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="hike[description]" value="<%= hike.description %>">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit</button>
                </div>
            </form>
            <a href="/hikes/<%= hike._id %>">Go Back</a>
        </div>
        
    </div>
</div>

<% include ../partials/footer %>