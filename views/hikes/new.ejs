<% include ../partials/header %>

<div class="container">
    <div class="row">
        <h1>Create a new hike</h1>
        
        <div>
            <form action="/hikes" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" placeholder="Enter a new hike: " name="name">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" placeholder="Enter the image URL: " name="image">
                </div>
                <div class="form-group">
                    <textarea class="form-control" type="text" placeholder="Enter a short description: " name="description"></textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit</button>
                </div>
            </form>
            <a href="/hikes">Go Back</a>
        </div>
        
    </div>
</div>

<% include ../partials/footer %>