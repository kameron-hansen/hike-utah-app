<% include ../partials/header %>

    <div class="row">
        <h1>Add New Comment to <%= hike.name %></h1>
        <div class="comment">
            <form action="/hikes/<%= hike._id %>/comments" method="POST">
                <div class="form-group">
                    <textarea class="form-control" type="text" name="comment[text]" placeholder="Enter a comment: "></textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a href="/hikes">Go Back</a>
        </div>
    </div>
    
<% include ../partials/footer %>